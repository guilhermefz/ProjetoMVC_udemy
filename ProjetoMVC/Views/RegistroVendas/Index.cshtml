@using ProjetoMVC.Models.ViewModels
@model IEnumerable<RegistroVendasViewModel>


@{
    ViewData["Title"] = "Registro de Vendas";
}
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Nova Venda</a>
</p>


<div>
    <table class="table table-striped table-hover">
        <thead>
            <th>
            @Html.DisplayNameFor(model => model.Id)
            </th>
        <th>@Html.DisplayNameFor(model => model.Data)</th>
        <th>
            @Html.DisplayNameFor(model => model.Status)</th>
        <th>
            @Html.DisplayNameFor(model => model.VendedorId)
        </th>
        <th>Actions</th>
        </thead>

    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Id)</td>
                    <td>@Html.DisplayFor(model => item.Data)</td>
                    <td>@Html.DisplayFor(model => item.Status)</td>
                    <td>@Html.DisplayFor(model => item.VendedorId)</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                              onsubmit="return confirm('Tem certeza que deseja excluir?')">

                            <button type="submit" class="btn btn-link p-0 m-0">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        </form>
                    </td>
                    <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    </td>
                </tr>
            }

    </tbody>
    </table>
</div>