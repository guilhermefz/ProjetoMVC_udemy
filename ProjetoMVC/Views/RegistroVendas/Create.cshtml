@using ProjetoMVC.Models.Dtos
@model RegistroVendasDto

@{
    ViewData["Title"] = "Create";
}
<h2>
    @ViewData["Title"]
</h2>


<style>
    #imagens {
        width: 400px;
        height: auto;
        margin: 30px 15px 700px 450px
    }

</style>
<div class="row">
    <div class="col-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="RegistroVendas.Id" class="control-label"></label>
                <input asp-for="RegistroVendas.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RegistroVendas.Data" class="control-label"></label>
                <input asp-for="RegistroVendas.Data" class="form-control" />
            </div>
            <div>
                <label asp-for="RegistroVendas.Status" class="control-label"></label>
                <select class="form-select" asp-for="RegistroVendas.Status" asp-items="@(new SelectList(Enum.GetValues(typeof(ProjetoMVC.Models.Enuns.StatusVenda))))" class="form-control">
                    <option value="">-- Select Status --</option>"
                </select>
            </div>
        </form>
    </div>
    <div class="col-6">
        <label asp-for="RegistroVendas.Vendedor.Id" class="control-label"></label>
        <select class="form-select" asp-for="RegistroVendas.Vendedor.Id" asp-items="@(new SelectList(Model.Vendedores, "Id", "Nome"))" class="form-control">
            <option value="">-- Select Vendedor --</option>
        </select>
    </div>
    <div class="col-4">
        <label asp-for="RegistroVendas.Quantidade" class="control-label"></label>
        <input asp-for="RegistroVendas.Quantidade" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>

    <div><
        <img id="imagens" src="/img/pos-venda.png" alt="Pós-venda" />
    </div>
</div>
